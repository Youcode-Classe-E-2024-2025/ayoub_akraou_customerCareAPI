                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ticket resolved"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Ticket": {
                "properties": {
                    "subject": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "TicketWithAgent": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Ticket"
                    },
                    {
                        "properties": {
                            "assigned_agent": {
                                "properties": {
                                    "id": {
                                        "type": "integer"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "type": "object"
                    }
                ]
            },
            "Response": {
                "properties": {
                    "content": {
                        "description": "The content of the response",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "ResponseWithDetails": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/Response"
                    },
                    {
                        "properties": {
                            "id": {
                                "description": "Response ID",
                                "type": "integer"
                            },
                            "ticket_id": {
                                "description": "Associated ticket ID",
                                "type": "integer"
                            },
                            "agent": {
                                "description": "Agent who created the response",
                                "properties": {
                                    "id": {
                                        "description": "Agent ID",
                                        "type": "integer"
                                    },
                                    "name": {
                                        "description": "Agent name",
                                        "type": "string"
                                    },
                                    "email": {
                                        "description": "Agent email",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            },
                            "created_at": {
                                "description": "Creation timestamp",
                                "type": "string",
                                "format": "date-time"
                            },
                            "updated_at": {
                                "description": "Last update timestamp",
                                "type": "string",
                                "format": "date-time"
                            }
                        },
                        "type": "object"
                    }
                ]
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
